<style>
html, body {
  width: 100%;
  height:100%;
}
/* BACKGRON COLOR CHANGE */
.animatedColorBg {
    /* Colores fluor más variados: fucsia, azul cyan, purple, verde neón, con menos rojo */
    background: linear-gradient(-45deg, #ff1493, #000, #00ffff, #000, #8a2be2, #000, #ff00ff, #000, #1e90ff  );
    background-size: 600% 600%;
    animation: gradient 15s ease infinite;
}

@keyframes gradient {
    0% {
        background-position: 0% 70%;
    }
    50% {
        background-position: 100% 70%;
    }
    100% {
        background-position: 0% 70%;
    }
}
 

.w-screen {
    margin: 0 !important;
    padding: 0 !important;
    box-sizing: border-box;
}

ul {
    margin: 0 !important;
    padding: 0 !important;
    list-style: none;
}

i{
	position: absolute;
	width: 120px;
	height: 120px;
	border-radius: 50%;
	-webkit-animation: 'screen'  infinite;
    animation: 'screen'  infinite;
}
/* FIN BACKGRON COLOR CHANGE */

/* FIN BACKGRON PARTICLES */
.glowing {
  position: relative;
  min-width: 700px;
  height: 700px;
  margin: -150px;
  transform-origin: right;
  animation: colorChange 7s linear infinite;
}

/* Delays escalonados para cada contenedor */
.glowing:nth-child(1) { animation-delay: 0s; }
.glowing:nth-child(2) { animation-delay: -0.5s; }
.glowing:nth-child(3) { animation-delay: -1s; }
.glowing:nth-child(4) { animation-delay: -1.5s; }
.glowing:nth-child(5) { animation-delay: -2s; }
.glowing:nth-child(6) { animation-delay: -2.5s; }
.glowing:nth-child(7) { animation-delay: -3s; }
.glowing:nth-child(8) { animation-delay: -3.5s; }
.glowing:nth-child(9) { animation-delay: -4s; }
.glowing:nth-child(10) { animation-delay: -4.5s; }

.glowing:nth-child(even) {
  transform-origin: left;
}

@keyframes colorChange {
  0% {
    filter: hue-rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    filter: hue-rotate(360deg);
    transform: rotate(360deg);
  }
}

.glowing span {
  position: absolute;
  width: 20px;
  height: 20px;
}

/* Posicionamiento variado para diferentes grupos */
.glowing span:nth-child(7n + 1) {
  top: calc(30px * var(--i));
  left: calc(25px * var(--i));
}

.glowing span:nth-child(7n + 2) {
  top: calc(35px * var(--i));
  right: calc(30px * var(--i));
}

.glowing span:nth-child(7n + 3) {
  bottom: calc(40px * var(--i));
  left: calc(35px * var(--i));
}

.glowing span:nth-child(7n + 4) {
  top: calc(20px * var(--i));
  left: calc(50px * var(--i));
}

.glowing span:nth-child(7n + 5) {
  bottom: calc(25px * var(--i));
  right: calc(40px * var(--i));
}

.glowing span:nth-child(7n + 6) {
  top: calc(45px * var(--i));
  left: calc(20px * var(--i));
}

.glowing span:nth-child(7n + 7) {
  bottom: calc(30px * var(--i));
  left: calc(45px * var(--i));
}

.glowing span::before {
  content: "";
  position: absolute;
  top: 50%;
  left: -8px;
  width: 15px;
  height: 15px;
  background: #f00;
  border-radius: 50%;
}

.glowing span:nth-child(7n + 1)::before {
  background: rgba(134,255,0,1);
  box-shadow: 0 0 20px rgba(134,255,0,1),
    0 0 40px rgba(134,255,0,1),
    0 0 60px rgba(134,255,0,1),
    0 0 80px rgba(134,255,0,1),
    0 0 0 8px rgba(134,255,0,.1);
}

.glowing span:nth-child(7n + 2)::before {
  background: rgba(255,214,0,1);
  box-shadow: 0 0 20px rgba(255,214,0,1),
    0 0 40px rgba(255,214,0,1),
    0 0 60px rgba(255,214,0,1),
    0 0 80px rgba(255,214,0,1),
    0 0 0 8px rgba(255,214,0,.1);
}

.glowing span:nth-child(7n + 3)::before {
  background: rgba(0,226,255,1);
  box-shadow: 0 0 20px rgba(0,226,255,1),
    0 0 40px rgba(0,226,255,1),
    0 0 60px rgba(0,226,255,1),
    0 0 80px rgba(0,226,255,1),
    0 0 0 8px rgba(0,226,255,.1);
}

.glowing span:nth-child(7n + 4)::before {
  background: rgba(255,0,150,1);
  box-shadow: 0 0 20px rgba(255,0,150,1),
    0 0 40px rgba(255,0,150,1),
    0 0 60px rgba(255,0,150,1),
    0 0 80px rgba(255,0,150,1),
    0 0 0 8px rgba(255,0,150,.1);
}

.glowing span:nth-child(7n + 5)::before {
  background: rgba(150,0,255,1);
  box-shadow: 0 0 20px rgba(150,0,255,1),
    0 0 40px rgba(150,0,255,1),
    0 0 60px rgba(150,0,255,1),
    0 0 80px rgba(150,0,255,1),
    0 0 0 8px rgba(150,0,255,.1);
}

.glowing span:nth-child(7n + 6)::before {
  background: rgba(255,100,0,1);
  box-shadow: 0 0 20px rgba(255,100,0,1),
    0 0 40px rgba(255,100,0,1),
    0 0 60px rgba(255,100,0,1),
    0 0 80px rgba(255,100,0,1),
    0 0 0 8px rgba(255,100,0,.1);
}

.glowing span:nth-child(7n + 7)::before {
  background: rgba(0,255,200,1);
  box-shadow: 0 0 20px rgba(0,255,200,1),
    0 0 40px rgba(0,255,200,1),
    0 0 60px rgba(0,255,200,1),
    0 0 80px rgba(0,255,200,1),
    0 0 0 8px rgba(0,255,200,.1);
}

.glowing span:nth-child(7n + 1) {
  animation: animate 16.8s linear infinite;
  animation-delay: 0s;
}

.glowing span:nth-child(7n + 2) {
  animation: animate-reverse 16.8s linear infinite;
  animation-delay: -8.2s;
}

.glowing span:nth-child(7n + 3) {
  animation: animate-ellipse 16.8s linear infinite;
  animation-delay: -13.1s;
}

.glowing span:nth-child(7n + 4) {
  animation: animate-wave 16.8s linear infinite;
  animation-delay: -7.1s;
}

.glowing span:nth-child(7n + 5) {
  animation: animate-spiral 16.8s linear infinite;
  animation-delay: -9.5s;
}

.glowing span:nth-child(7n + 6) {
  animation: animate-figure8 16.8s linear infinite;
  animation-delay: -11.9s;
}

.glowing span:nth-child(7n + 7) {
  animation: animate 16.8s linear infinite;
  animation-delay: -14.3s;
}

/* Patrones adicionales redistribuidos para mejor equilibrio */
.glowing span:nth-child(11n + 8) {
  animation: animate-ellipse 13s ease-in-out infinite;
  animation-delay: -8.5s;
}

.glowing span:nth-child(11n + 9) {
  animation: animate-wave 16s linear infinite;
  animation-delay: -10s;
}

.glowing span:nth-child(11n + 10) {
  animation: animate-spiral 16.8s ease-in-out infinite;
  animation-delay: -11.2s;
}

.glowing span:nth-child(13n + 11) {
  animation: animate-figure8 20s linear infinite;
  animation-delay: -12.5s;
}

@keyframes animate {
  0% {
    transform: rotate(180deg);
  }
  50% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes animate-reverse {
  0% {
    transform: rotate(360deg);
  }
  50% {
    transform: rotate(180deg);
  }
  100% {
    transform: rotate(0deg);
  }
}

@keyframes animate-ellipse {
  0% {
    transform: rotate(0deg) translateX(80px) rotate(0deg) scale(1);
  }
  25% {
    transform: rotate(90deg) translateX(120px) rotate(-90deg) scale(1.2);
  }
  50% {
    transform: rotate(180deg) translateX(80px) rotate(-180deg) scale(0.8);
  }
  75% {
    transform: rotate(270deg) translateX(120px) rotate(-270deg) scale(1.1);
  }
  100% {
    transform: rotate(360deg) translateX(80px) rotate(-360deg) scale(1);
  }
}

@keyframes animate-wave {
  0% {
    transform: rotate(0deg) translateY(0px) scale(1);
  }
  25% {
    transform: rotate(90deg) translateY(-40px) scale(1.3);
  }
  50% {
    transform: rotate(180deg) translateY(0px) scale(0.7);
  }
  75% {
    transform: rotate(270deg) translateY(40px) scale(1.2);
  }
  100% {
    transform: rotate(360deg) translateY(0px) scale(1);
  }
}

@keyframes animate-spiral {
  0% {
    transform: rotate(0deg) translateX(20px) scale(0.5);
  }
  25% {
    transform: rotate(90deg) translateX(60px) scale(1);
  }
  50% {
    transform: rotate(180deg) translateX(100px) scale(1.5);
  }
  75% {
    transform: rotate(270deg) translateX(60px) scale(1);
  }
  100% {
    transform: rotate(360deg) translateX(20px) scale(0.5);
  }
}

@keyframes animate-figure8 {
  0% {
    transform: rotate(0deg) translateX(60px) rotate(0deg);
  }
  25% {
    transform: rotate(180deg) translateX(60px) rotate(-180deg);
  }
  50% {
    transform: rotate(360deg) translateX(-60px) rotate(-360deg);
  }
  75% {
    transform: rotate(540deg) translateX(-60px) rotate(-540deg);
  }
  100% {
    transform: rotate(720deg) translateX(60px) rotate(-720deg);
  }
}

/* FIN BACKGRON PARTICLES */

